<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/color_black"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/activity_weather_forecast_data_item_iv_weather"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            fresco:fadeDuration="300" />

        <TextView
            android:id="@+id/activity_weather_forecast_data_item_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/activity_weather_forecast_data_item_iv_weather"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_default" />

        <TextView
            android:id="@+id/activity_weather_forecast_data_item_tv_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/activity_weather_forecast_data_item_iv_weather"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_default" />

        <TextView
            android:id="@+id/activity_weather_forecast_data_item_tv_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_weather_forecast_data_item_iv_weather"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toRightOf="@+id/activity_weather_forecast_data_item_tv_weather"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_default" />

        <TextView
            android:id="@+id/activity_weather_forecast_data_item_tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_weather_forecast_data_item_iv_weather"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toRightOf="@+id/activity_weather_forecast_data_item_tv_wind"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_default" />

    </RelativeLayout>

</android.support.v7.widget.CardView>