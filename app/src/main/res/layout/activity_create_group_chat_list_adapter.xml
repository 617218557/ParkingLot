<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_create_group_chat_lv_item_ll_total"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_create_group_chat_lv_item_tv_imAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_black"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/activity_horizontal_margin" />

    <TextView
        android:id="@+id/activity_create_group_chat_lv_item_tv_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_black"
        android:visibility="invisible"
        android:text="@string/ativity_create_group_chat_check"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textColor="@color/color_white"/>

</RelativeLayout>
